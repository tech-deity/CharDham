<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_width="104dp"
        android:layout_centerVertical="true"
        android:paddingStart="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vct_color_title"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:text="Chardham"
            android:textSize="16dp"
            android:fontFamily="@font/oswald_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/vct_title"
            android:textColor="@color/black_252525"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Yatra From"
            android:fontFamily="@font/oswald_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/vct_view_all"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/view_all"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vct_rv"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>