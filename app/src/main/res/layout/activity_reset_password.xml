<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
   android:background="@color/white"
    tools:context=".view.activity.ResetPassword">

    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="8dp"
            android:text="Chardham Reset Password"
            android:textColor="@color/orange"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:text="Enter Your Email"
        android:textColor="@color/black_252525"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email"
        android:hint="Registered Email"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_message_24dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/password_tv"
        android:text="Enter New Password"
        android:textStyle="bold"
        android:textSize="16sp"

        android:layout_marginTop="30dp"
        android:textColor="@color/black_252525"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/password"
        android:hint="Atleast 8 character required"
        android:drawableStart="@drawable/ic_password"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/send_otp"
        android:text="Send"
        android:background="@drawable/bg_selector_white_to_orange"
        android:textColor="@color/text_orange_towhite"
        android:layout_marginTop="12dp"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="38dp"/>


    <TextView
        android:id="@+id/text_enter"
        android:text="Enter OTP"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/otp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_lightgray"
        android:hint="OTP"
        android:inputType="number"
        android:maxLength="4"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />


    <Button
        android:id="@+id/verify_otp"
        android:text="verify"
        android:background="@drawable/bg_selector_orange_todark_orange"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="42dp"/>






</LinearLayout>