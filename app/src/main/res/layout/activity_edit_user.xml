<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.EditUser"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <include layout="@layout/toolbar_back"
            android:id="@+id/toolbar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/editUserImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="24dp"
            android:src="@drawable/default_user"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/gray"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/edit_change_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="-15dp"
            android:text="Change Profile" />

        <TextView
            android:id="@+id/edit_remove_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="invisible"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="-18dp"
            android:text="Remove Profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Enter name"
            android:singleLine="true"
            android:textColor="@color/black_252525"
            android:padding="6dp"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Enter mobile no."
            android:fontFamily="sans-serif-condensed"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="@color/black_252525"
            android:padding="6dp"
            android:textSize="16sp"/>





        <TextView
            android:id="@+id/updateUser"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="UPDATE USER"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>
