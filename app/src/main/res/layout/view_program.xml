<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:text="Tour Itinerary"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:padding="16sp"
            android:textColor="@color/black_252525"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
        android:layout_alignBottom="@+id/title"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/plan_txt"
        android:text="Choose Duration:"
        android:layout_below="@+id/title"
        android:padding="16sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black_252525"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_alignStart="@+id/plan_txt"
        android:layout_alignEnd="@+id/plan_txt"
        android:layout_alignBottom="@id/plan_txt"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="16sp"
        android:background="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

    <HorizontalScrollView
        android:layout_alignTop="@+id/plan_txt"
        android:layout_toEndOf="@+id/plan_txt"
        android:layout_alignBottom="@+id/plan_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/planLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>

        </HorizontalScrollView>

    <LinearLayout
        android:layout_below="@id/plan_txt"
        android:background="@color/white"
        android:padding="16sp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tour Name:"
                    android:drawableLeft="@drawable/ic_tour_name_itinary"
                    android:textStyle="bold"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/placeName"
                    android:text="@string/banner_sub_title"
                    android:paddingStart="8dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tour Duration:"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/tour_duration"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/placeDuration"
                    android:text="@string/banner_sub_title"
                    android:maxLines="1"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Price:"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:drawablePadding="1dp"
                    android:drawableLeft="@drawable/tour_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/placePrice"
                    android:text="@string/banner_sub_title"
                    android:paddingStart="8dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Destination Covered:"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableLeft="@drawable/tour_destination_covered"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:drawablePadding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/placeCovered"
                    android:text="@string/banner_sub_title"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:maxHeight="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/scroll_title"
                        android:padding="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_weight="0.8"
                        android:text="Tour Itinerary Information"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/program_scroll_down_up"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:padding="8dp"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/placeDesc"
                    android:textColor="@color/black_252525"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Itinerary Content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

</androidx.cardview.widget.CardView>