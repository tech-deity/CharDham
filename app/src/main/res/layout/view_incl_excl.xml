<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/inclusion_tv"
             android:layout_weight="1"
             android:textSize="16sp"
             android:text="Inclusion"
             android:drawableLeft="@drawable/ic_add_circle_black_24dp"
             android:textColor="@color/orange"
             android:padding="15sp"
             android:fontFamily="sans-serif-condensed"
             android:textStyle="bold"
             android:textAlignment="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"/>

         <View
             android:background="@drawable/overlay_black"
             android:layout_width="1dp"
             android:layout_height="50dp"/>

         <TextView
             android:id="@+id/exclusion_tv"
             android:layout_weight="1"
             android:textSize="16sp"
             android:text="Exclusion"
             android:fontFamily="sans-serif-condensed"
             android:drawableStart="@drawable/ic_indeterminate_check_box_black_24dp"
             android:padding="15sp"
             android:textStyle="bold"
             android:textAlignment="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"/>

     </LinearLayout>

     <View
         android:layout_marginBottom="2dp"
         android:background="@color/light_gray"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>

     <TextView
         android:id="@+id/inc_exc_fill_tv"
         android:textSize="15sp"
         android:padding="14sp"
         android:textColor="@color/black"
         android:text="Nothing to show"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

     <TextView
         android:id="@+id/expand_tv"
         android:textStyle="bold"
         android:text="+ Expand"
         android:visibility="gone"
         android:paddingStart="80dp"
         android:paddingEnd="20dp"
         android:paddingTop="8dp"
         android:paddingBottom="8dp"
         android:textAlignment="textEnd"
         android:layout_gravity="end"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>

 </LinearLayout>

</androidx.cardview.widget.CardView>